// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Income {
  id          String      @id @default(uuid())
  description String      
  value       Decimal
  date        DateTime
} 

model Outgoing {
  id          String      @id @default(uuid())
  description String
  value       Decimal
  date        DateTime    
  category    Category    @default(Other)
}

enum Category {
    Food
    Health
    Habitation
    Transport
    Education
    Leisure
    Unexpected
    Other
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String

  @@map("users")
}